<div class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active"><a href="/dashboard/add">Add Note</a></li>
                </ol>
            </nav>
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3">Add Note</h1>
            </div>
        </div>
    </div>

    <form action="/dashboard/add" method="POST">
        <div class="form-group mb-4">
            <input type="text" class="form-control fw-bold border-0 fs-4" id="title" name="title"
                value="<%= note.title || '' %>" placeholder="Title" required>
        </div>

        <div class="form-group mb-4">
            <textarea   required class="form-control pt-5 fs-4" id="body" placeholder="Take a Note" rows="12"><%= note.body || '' %></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">+Add Note</button>
        </div>
    </form>
</div>
